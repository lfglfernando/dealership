<main>
    <h1>Delete <%= inv_make %> <%= inv_model %></h1>
  
    <p>Confirm Deletion - This cannot be undone.</p>
  
    <% if (errors) { %>
      <ul class="flash-message error">
        <% errors.array().forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    <% } %>
  
    <form action="/inv/delete" method="post">
      <label for="inv_make">Make</label>
      <input type="text" readonly id="inv_make" value="<%= inv_make %>">
  
      <label for="inv_model">Model</label>
      <input type="text" readonly id="inv_model" value="<%= inv_model %>">
  
      <label for="inv_year">Year</label>
      <input type="text" readonly id="inv_year" value="<%= inv_year %>">
  
      <label for="inv_price">Price</label>
      <input type="text" readonly id="inv_price" value="<%= inv_price %>">
  
      <input type="hidden" name="inv_id" value="<%= inv_id %>">
  
      <button type="submit" class="btn red">Delete Vehicle</button>
    </form>
  </main>
  