<main>
    <h1>Account Management</h1>
  
    <% const messages = getMessages() %>
    <% if (messages.notice && messages.notice.length > 0) { %>
      <div class="flash-message success"><%= messages.notice[0] %></div>
    <% } %>
    <% if (messages.error && messages.error.length > 0) { %>
      <div class="flash-message error"><%= messages.error[0] %></div>
    <% } %>
  
    <h2>Welcome, <%= accountData.account_firstname %>!</h2>
    <p>Your role is: <%= accountData.account_type %></p>
  
    <p><a href="/account/edit/<%= accountData.account_id %>">Update Account Info</a></p>
  
    <% if (accountData.account_type === 'Employee' || accountData.account_type === 'Admin') { %>
      <h3>Inventory Management</h3>
      <p><a href="/inv">Manage Inventory</a></p>
    <% } %>
  </main>
  