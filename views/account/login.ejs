<main class="form-container">
    <h1><%= title %></h1>
  
    <% if (messages.notice && messages.notice.length > 0) { %>
      <div class="flash-message success">
        <% messages.notice.forEach(function(msg){ %>
          <p><%= msg %></p>
        <% }) %>
      </div>
    <% } %>
  
    <% if (messages.error && messages.error.length > 0) { %>
      <div class="flash-message error">
        <% messages.error.forEach(function(msg){ %>
          <p><%= msg %></p>
        <% }) %>
      </div>
    <% } %>
  
    <form id="loginForm" action="/account/login" method="post" class="form">
      <label for="account_email">Email</label>
      <input type="email" name="account_email" id="account_email" required placeholder="Enter your email" />
    
      <label for="account_password">Password</label>
      <input type="password" name="account_password" id="account_password" required placeholder="Enter your password" />
    
      <button type="submit" class="btn">Login</button>
    </form>    
  
    <p class="register-link">
      Don't have an account?
      <a href="/account/register">Register here</a>
    </p>
  </main>